extends layout

block content
  #fb-root
  script.
    (function(d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s); js.id = id;
    js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.8";
    fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));
  div.box-fb-page
   div(class="fb-page" 
   data-href="https://www.facebook.com/sindhuskitchen"
   data-width="500" 
   data-hide-cover="false"
   data-show-facepile="false" 
   data-show-posts="false")
  div.box-title.shadow-effect-bottom
   table(style="width:100%")
    tr
      td(align="left")
        img(src='/images/Christmas-Tree.png',height='30%')
      td(align="center")
        h1= "XMAS Countdown"
      td(align="right")
        img(src='/images/Christmas-Tree.png',height='30%')
  each post in title
     if(post.message)
         div.box-content.shadow-effect-sides
           h3= post.created_time
           h3= post.message
           img(src=post.full_picture)